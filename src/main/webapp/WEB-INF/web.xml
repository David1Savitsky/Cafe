<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Cafe</display-name>

  <filter>
    <filter-name>PageRedirectSecurityFilter</filter-name>
    <filter-class>com.epam.webappfinal.filter.PageRedirectSecurityFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>PageRedirectSecurityFilter</filter-name>
    <url-pattern>/jsp/*</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>CharacterSetFilter</filter-name>
    <filter-class>com.epam.webappfinal.filter.CharacterSetFilter</filter-class>
  </filter>
  
  <filter-mapping>
    <filter-name>CharacterSetFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <servlet>
    <servlet-name>main</servlet-name>
    <servlet-class>com.epam.webappfinal.Controller</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>main</servlet-name>
    <url-pattern>/controller</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>

</web-app>